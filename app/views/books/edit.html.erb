<h1>Editing Book</h1>

<%= form_with model: @book, url: edit_book_path(@book.id), method: :patch do |f| %>

<% if flash[:notice] %>
 <p id = "notice">
    <%= flash[:notice] %>
 </p>
<% end %>
<% end %>

<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", "/books" %>

<%= f.submit 'Update Book' %>

<% end %>

