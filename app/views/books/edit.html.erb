<h1>Editing Book</h1>

<%= form_with model: @book, url: edit_book_path(@book.id), method: :patch do |f| %>

<% if flash[:notice] %>
 <p id = "notice">
    <%= flash[:notice] %>
 </p>
<% end %>
<% end %>


<%= form_with model: @book do |f| %>

<div class="field">
 <%= f.label :title %>
 <%= f.text_field :title %>
</div>

<div class="field">
 <%= f.label :body %>
 <%= f.text_area :body %>
</div>

<div class="actions">
 <%= f.submit 'Update Book' %>
</div>


<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", "/books" %> 

<% end %>
